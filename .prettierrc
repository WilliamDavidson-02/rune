{
	"arrowParens": "always",

	"bracketSpacing": true,
	"semi": false,
	"tabWidth": 2,

	"useTabs": true,
	"singleQuote": false,
	"trailingComma": "none",
	"printWidth": 80,

	"plugins": [
		"prettier-plugin-tailwindcss",
		"@ianvs/prettier-plugin-sort-imports"
	],

	"importOrderTypeScriptVersion": "4.4.0",
	"importOrderParserPlugins": [
		"typescript",
		"jsx",
		"explicitResourceManagement"
	],
	"importOrder": [
		"^(react/(.*)$)|^(react$)",
		"^(next/(.*)$)|^(next$)",
		"<THIRD_PARTY_MODULES>",
		"",
		"^@components/(.*)$",
		"^@hooks/(.*)$",
		"^@lib/(.*)$",
		"^@stores/(.*)$",
		"^@/(.*)$",
		"",
		"^[./]"
	]
}
